<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shi_you_kami"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    tools:context="com.tiantianle.activity.ShiYouKami">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorBackMemu"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/img_shiyoukami_back"
            android:layout_width="wrap_content"
            android:src="@mipmap/navback"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:text="@string/shiHuaYouKaKaMi"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/duihuanMianZhi"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RadioGroup
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/radbtn_shiyoukami_10"
                    android:layout_width="60dp"
                    android:checked="true"
                    android:layout_marginLeft="30dp"
                    android:button="@null"
                    android:textColor="@color/clolrTextNorenl"
                    android:gravity="center"
                    android:background="@drawable/jingdongeka_radiobutton_back"
                    android:text="10元"
                    android:layout_height="30dp"/>
                <RadioButton
                    android:id="@+id/radbtn_shiyoukami_20"
                    android:layout_width="60dp"
                    android:textColor="@color/clolrTextNorenl"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/jingdongeka_radiobutton_back"
                    android:button="@null"
                    android:text="20元"
                    android:gravity="center"
                    android:layout_height="30dp"/>
                <RadioButton
                    android:id="@+id/radbtn_shiyoukami_50"
                    android:layout_width="60dp"
                    android:textColor="@color/clolrTextNorenl"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/jingdongeka_radiobutton_back"
                    android:button="@null"
                    android:gravity="center"
                    android:text="50元"
                    android:layout_height="30dp"/>


            </RadioGroup>

            <RadioGroup
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/radbtn_shiyoukami_100"
                    android:layout_width="60dp"
                    android:button="@null"
                    android:textColor="@color/clolrTextNorenl"
                    android:layout_marginLeft="30dp"
                    android:text="100元"
                    android:gravity="center"
                    android:background="@drawable/jingdongeka_radiobutton_back"
                    android:layout_height="30dp"/>
                <RadioButton
                    android:id="@+id/radbtn_shiyoukami_200"
                    android:layout_width="60dp"
                    android:textColor="@color/clolrTextNorenl"
                    android:button="@null"
                    android:layout_marginLeft="30dp"
                    android:text="200元"
                    android:gravity="center"
                    android:background="@drawable/jingdongeka_radiobutton_back"
                    android:layout_height="30dp"/>
                <RadioButton
                    android:id="@+id/radbtn_shiyoukami_300"
                    android:layout_width="60dp"
                    android:textColor="@color/clolrTextNorenl"
                    android:button="@null"
                    android:layout_marginLeft="30dp"
                    android:text="300元"
                    android:gravity="center"
                    android:background="@drawable/jingdongeka_radiobutton_back"
                    android:layout_height="30dp"/>


            </RadioGroup>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/duihuanSuoXuMoDou"
            />
        <TextView
            android:id="@+id/text_suoXu_modou_shiyoukami"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorBackMemu"
            android:layout_height="wrap_content"
            android:text="10000000"/>

        <TextView
            android:text="@string/MagicBean"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"

        >
        <TextView
            android:text="@string/duihuanjyPassWord"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edittext_shiyoukami"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/radiobutton_back_shap_nomal"
            android:layout_height="40dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_queren_shiyoukami"
        android:text="@string/duihuanConfirm"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_qurenduihuan_jingdongeka"
        android:textColor="@color/colorText"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <TextView
        android:text="@string/duihuanNewDongTai"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/listview_shiyoukami"
        android:layout_width="300dp"
        android:scrollbars="none"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="0dp"
        android:layout_weight="1"></ListView>
</LinearLayout>
