<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/ll_woshihaoren"
              android:layout_width="match_parent"
              android:background="@color/colorText"
              android:layout_height="wrap_content">


     <ImageView
        android:id="@+id/img_adapter_indiana"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/modou1"
      />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="65dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:text="333333期"
                android:textSize="12sp"
                />

            <ProgressBar
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/progressBar_adapter_indiana"
                android:layout_marginRight="10dp"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:progressDrawable="@drawable/progressbar"
                android:layout_height="5dp"
                android:max="100"
                android:progress="50"
                android:visibility="visible"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_zongxu"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/clolrTextNorenl"
                    android:textSize="10sp"
                    android:text="@string/zongXu"/>
                <TextView
                    android:id="@+id/text_adapter_indiana_zongxu"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/clolrTextNorenl"
                    android:textSize="10sp"
                    android:layout_toRightOf="@id/text_zongxu"
                    android:layout_height="wrap_content"
                    android:text="1600"/>

            <TextView
               android:id="@+id/text_adapter_indiana_shengyv"
               android:layout_width="wrap_content"
               android:layout_marginRight="5dp"
               android:layout_marginTop="5dp"
               android:layout_alignParentRight="true"
               android:textSize="10sp"
               android:text="100"
               android:textColor="@color/clolrTextNorenl"
               android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/text_shengyv"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/clolrTextNorenl"
                    android:layout_toLeftOf="@id/text_adapter_indiana_shengyv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="@string/shengYv"/>
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="65dp"
            >
            <Button
                android:id="@+id/btn_adapter_indinan_buy"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_marginRight="5dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:textSize="12sp"
                android:background="@drawable/button_adapter_iniana_shap"
                android:textColor="@color/colorBackMemu"
                android:text="立即购买"/>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>