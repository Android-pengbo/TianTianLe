<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <cn.iwgang.countdownview.CountdownView
            android:layout_marginLeft="10dp"
            android:id="@+id/text_countdownv_hongbao_fram"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:isHideTimeBackground="true"
            app:isShowSecond="true"
            app:timeTextColor="@color/colorText"
            app:timeTextSize="12sp"
            app:isTimeTextBold="true"
            app:suffixTextColor="@color/colorText"
            app:suffixTextSize="12sp"
            app:suffixSecond="秒"
            app:suffixSecondLeftMargin="0dp"
            android:background="@mipmap/backred"
            />
        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp">
            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/text_jiangchi"
                android:text="奖池"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/text_jiangchishuliang"
                android:layout_width="wrap_content"
                android:text="20000"
                android:textColor="@color/jisulist"
                android:layout_toRightOf="@id/text_jiangchi"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text_di_jisu_list"
                android:text="第"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_below="@id/text_jiangchi"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text_qishu_jisu_list"
                android:layout_width="wrap_content"
                android:text="1516"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:layout_below="@id/text_jiangchi"
                android:layout_toRightOf="@id/text_di_jisu_list"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text_shu_jisu_list"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:text="期"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/text_qishu_jisu_list"
                android:layout_below="@id/text_jiangchi"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text_time_jisu_list"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:text="16:00"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:textSize="10sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text_l_jisu_list"
                android:text="0/28"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                  android:textSize="7sp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/text_time_jisu_list"
                android:gravity="center"
                android:background="@mipmap/biligray"
                android:layout_width="25dp"
                android:layout_height="15dp"/>

            <Button
                android:id="@+id/btn_touzhu_jisu_list"
                android:text="投注"
                android:textSize="10sp"
                android:textColor="@color/colorText"
                android:layout_marginRight="6dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/text_time_jisu_list"
                android:background="@drawable/my_button_tuichu"
                android:layout_width="30dp"
                android:layout_height="20dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/progressbarNomal"
                />

        </RelativeLayout>



    </LinearLayout>




</RelativeLayout>